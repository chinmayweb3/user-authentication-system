<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Register</title>
  </head>
  <style>
    main {
      display: flex;
      height: 100vh;
      justify-content: center;
      align-items: center;
      flex-direction: column;
    }
    form {
      width: 300px;
      display: grid;
      grid-template-columns: 1fr 2fr;
      gap: 20px;
    }
    button {
      grid-column: span 2;
    }
  </style>
  <script>
    async function sendFormData(e) {
      e.preventDefault();
      var baseUrl = "<%= process.env.baseUrl %>";
      const loading = document
        .getElementById("submit")
        .getAttribute("data-loading"); //default: false
      if (+loading) return;
      document.getElementById("submit").setAttribute("data-loading", "1");
      document.getElementById("submit").style.cursor = "no-drop";
      document.getElementById("submit").innerHTML = "Loading...";

      const email = document.getElementById("email").value;
      const password = document.getElementById("password").value;
      const name = document.getElementById("name").value;
      const username = document.getElementById("username").value;

      const body = { email, password, name, username };

      const token = await fetch(`${baseUrl}/a/usercreate`, {
        headers: { "Content-Type": "application/json" },
        method: "POST",
        body: JSON.stringify(body),
      });
      const json = await token.json();
      localStorage.setItem("token", json.token);
    }
  </script>
  <body>
    <main>
      <h1>Register</h1>
      <form onsubmit="sendFormData(event)">
        <label for="email">Name:</label>
        <input type="text" id="name" name="name" />
        <label for="username">UserName:</label>
        <input type="text" id="username" name="username" />
        <label for="email">Email:</label>
        <input type="email" id="email" name="email" />
        <label for="email">Password:</label>
        <input type="password" id="password" name="password" />
        <button id="submit" data-loading="0" type="submit">Submit</button>
      </form>
    </main>
  </body>
</html>
